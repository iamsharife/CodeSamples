<?xml version="1.0" encoding="utf-8"?>
<supportClasses:SocialNavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
									   xmlns:s="library://ns.adobe.com/flex/spark" 
									   xmlns:mx="library://ns.adobe.com/flex/mx"
									   xmlns:supportClasses="cc.sitemaker.social.view.components.supportClasses.*"
									   icon="{SocialIcons.TWITTER_ICON_20}">
	
	<fx:Script>
		<![CDATA[
			import assets.SocialIcons;
		]]>
	</fx:Script>
	
	<supportClasses:states>
		<s:State name="notLoggedIn" />
		<s:State name="loggedIn" />
	</supportClasses:states>
	
	<s:HGroup width="100%" height="100%" gap="-1">
		<s:BorderContainer width="168" height="100%" borderColor="0xCCCCCC" backgroundColor="0xF1F1F1">
			<s:layout>
				<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" />
			</s:layout>
			<s:HGroup width="100%">
				<s:Group width="52" height="52">
					<s:BorderContainer borderColor="0x808080" width="50" height="50" bottom="0">
						<mx:Image id="profileImage" bottom="0" width="48" height="48" scaleContent="true"
								  source.notLoggedIn="{SocialIcons.AVATAR_48_48}"/>
					</s:BorderContainer>
				</s:Group>
				<s:VGroup width="100%" height="100%" verticalAlign="bottom">
					<s:Label id="lblUsername"
							 text.notLoggedIn=" "
							 styleName="titleMediumBold"
							 width="100%" />
					<s:Button id="signInOutButton" label.loggedIn="Sign out" 
							  label.notLoggedIn="Sign in"
							  color="0x666666" buttonMode="true" useHandCursor="true"
							  styleName="titleMediumBold"
							  skinClass="cc.sitemaker.common.skins.ButtonNoBorderSkin"/>
				</s:VGroup>
			</s:HGroup>
		</s:BorderContainer>
		<s:SkinnableContainer id="socialContent" width="100%" height="100%" enabled="{selected}"
							  skinClass="cc.sitemaker.social.view.components.skin.SocialProfileContainer">
			<s:layout>
				<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" />
			</s:layout>
			<s:Label text="Tweet:" 
					 styleName="titleMediumBold"/>
			<s:TextArea id="messageArea" width="100%" heightInLines="3"
						styleName="titleMediumBold"
						focusThickness="0" maxChars="119"/>
			<s:HGroup width="100%" horizontalAlign="right">
				<s:Label text="{messageArea.text.length} / 119" 
						 styleName="titleMediumBold"/>
			</s:HGroup>
		</s:SkinnableContainer>
	</s:HGroup>
	
</supportClasses:SocialNavigatorContent>
