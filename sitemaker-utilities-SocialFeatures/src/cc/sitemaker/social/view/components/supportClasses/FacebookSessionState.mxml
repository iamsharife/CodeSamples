<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%">
	<fx:Script>
		<![CDATA[
			import assets.SocialIcons;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<fx:String id="toText"/>
	</fx:Declarations>
	
	<s:states> 
		<s:State name="notLoggedIn" />
		<s:State name="loggedIn" />
	</s:states>
	
	<s:BorderContainer borderColor="0x808080" width="52" height="52">
		<mx:Image id="profileImage" bottom="0" width="50" height="50" scaleContent="true"
				  source.notLoggedIn="{SocialIcons.AVATAR_50_50}"/>
	</s:BorderContainer>
	<s:VGroup width="100%" height="100%" verticalAlign="bottom">
		<s:Label id="lblUsername"
				 text.notLoggedIn=" "
				 styleName="titleMediumBold"
				 width="100%" />
		<s:Button id="signInOutButton" label.loggedIn="Sign out" 
				  label.notLoggedIn="Sign in {(toText) ? toText : ''}"
				  color="0x666666" buttonMode="true" useHandCursor="true"
				  styleName="titleMediumBold"
				  skinClass="cc.sitemaker.common.skins.ButtonNoBorderSkin"/>
	</s:VGroup>
	
</s:HGroup>
