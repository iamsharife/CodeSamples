<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:local="*">
	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup verticalCenter="0" horizontalCenter="0">
		<s:Group height="{pieProgress.radius*2}" width="{pieProgress.radius*2}">
			<local:PieProgress id="pieProgress" x="30" y="30" radius="30" color="{colourPicker.selectedColor}"/>
		</s:Group>
		
		<mx:Spacer height="150" />
		<s:HSlider id="slider" minimum="0" maximum="100" change="pieProgress.setProgress(slider.value, slider.maximum)" />
		<mx:ColorPicker id="colourPicker" />
	</s:VGroup>
	
	
	
</s:Application>
